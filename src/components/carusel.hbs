<header id="c">
    <button>&laquo;</button>
    <h1>{{title}}</h1>
    <ul>
        {{#each carusel}}
            {{#if @index}}
            <li>
            {{else}}
            <li class="a">
            {{/if}}
                <div>
                    <h2><a href="{{this.to}}">{{this.name}}</a></h2>
                    {{#if this.fil}}
                        {{#each this.fil}}
                            <address>
                                <a href="{{this.linkAddress}}" rel="noreferrer" target="_blank">{{this.address}}</a>
                            </address>
                            <ul>
                                {{#each this.tel}}
                                    <li><a href="tel:+38{{this}}">{{tel tel=this}}</a></li>
                                {{/each}}
                            </ul>
                        {{/each}}
                    {{/if}}
                    {{#if this.tel}}
                        <ul>
                            {{#each this.tel}}
                                <li><a href="tel:+38{{this}}">{{tel tel=this}}</a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </div>
                â€‹<picture>
                    <source media='(orientation: portrait)'  srcset="/c/{{this.to}}-p.avif" type="image/avif">
                    <source media='(orientation: portrait)'  srcset="/c/{{this.to}}-p.webp" type="image/webp">
                    <source media='(orientation: landscape)' srcset="/c/{{this.to}}.avif" type="image/avif">
                    <source media='(orientation: landscape)' srcset="/c/{{this.to}}.webp" type="image/webp">
                    <img src="/c/{{this.to}}.jpg" alt="{{this.to}}">
                </picture>
            </li>
        {{/each}}
    </ul>
    <button>&raquo;</button>
    <nav class="subNav">
        <ul>
            {{#each subNav}}
                <li>
                    <a href="/{{this.to}}">{{{icon src=this.to}}}{{this.name}}</a>
                </li>
            {{/each}}
        </ul>
    </nav>
</header>
